FROM yiisoftware/yii2-php:7.4-apache

RUN apt-get update && apt-get install -y unzip git && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY . /app

RUN sed -i 's|/var/www/html|/app/web|g' /etc/apache2/sites-available/000-default.conf \
    && sed -i 's|/var/www/html|/app/web|g' /etc/apache2/apache2.conf

RUN chown -R www-data:www-data /app && chmod -R 755 /app

CMD if [ ! -f /app/web/index.php ]; then \
        composer create-project --prefer-dist yiisoft/yii2-app-basic /app; \
    fi && apache2-foreground
